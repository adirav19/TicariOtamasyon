@using TicariOtamasyon.Models.Siniflar;

@model List<Urun>
  


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />


<h2>Aktif Ürünler</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>Durum</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UrunID</td>
            <td>@item.UrunAd</td>
            <td>@item.Marka</td>
            <td>@item.Stok</td>
            <td>@item.AlisFiyat</td>
            <td>@item.SatisFiyat</td>
            <td>@item.Kategori.KategoriAd</td>
            <td>@item.UrunGorsel</td>
            <td> <a href="/Urun/UrunSil/@item.UrunID" class="btn btn-danger">Pasifleştir</a></td>
            <td> <a href="/Urun/UrunGetir/@item.UrunID" class="btn btn-danger">Guncelle</a></td>
        </tr>
    }




</table>
<a href="/Urun/UrunEkle" class="btn btn-danger">Yeni Urun EKLE</a>
<br />
<br />
<h2>Pasif Ürünler</h2>
@Html.Action("UrunPartial","Urun")
