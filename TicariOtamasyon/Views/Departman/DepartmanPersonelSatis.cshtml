@using TicariOtamasyon.Models.Siniflar

@model List<SatisHareketi>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Personel Satis</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">
        Personel    adı : @ViewBag.dpers
    </li>
</ol>

<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.SatisID</td>
        <td>@item.Urun.UrunAd</td>
        <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
        <td>@item.Fiyat</td>
        <td>@item.Adet</td>
        <td>@item.ToplamTutar</td>
        <td>@item.Tarih</td>
        <td><a href="#" class="btn btn-danger">Yazdır</a></td>
        
    </tr>
    }

</table>
