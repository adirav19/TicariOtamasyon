
@using TicariOtamasyon.Models.Siniflar

@model List<Personel>


@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<h2>Departman Detay Sayfası</h2>

<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">
       departman adı : @ViewBag.d
    </li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Personel ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>GÖRSEL</th>
        <th>SATIŞLAR</th>

    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.PersonelID</td>
        <td>@item.PersonelAd</td>
        <td>@item.PersonelSoyad</td>
        <td>@item.PersonelGorsel</td>
        <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btm btn-default">Detay</a></td>
    </tr>
    }
</table>
