@using TicariOtamasyon.Models.Siniflar

@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departmanlar</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>DEPARTMAN</th>
        <th>DURUM</th>
        <th>GÜNCELLE</th>
        <th>DETAY</th>
        <th>KALICI SİL</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DepartmanID</td>
            <td>@item.DepartmanAd</td>
            <td><a href="/Departman/DepartmanSil/@item.DepartmanID" class="btn btn-danger">Pasifleştir</a></td>
            <td><a href="/Departman/DepartmanGetir/@item.DepartmanID" class="btn btn-danger">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@item.DepartmanID" class="btn btn-info">Git</a></td>
            <td><a href="/Departman/DepartmanKaliciSil/@item.DepartmanID" class="btn btn-info">Sil</a></td>


        </tr>
    }

</table>
<a href="/Departman/DepartmanEkle" class="btn btn-primary">Departman Ekle</a>
<br />
@Html.Action("DepartmanPartial", "Departman")